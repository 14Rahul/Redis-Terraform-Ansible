[Unit]
Description=Redis Exporter
Wants=network-online.target
After=network-online.target

[Service]
User=root
Group=root
Type=simple
ExecStart=/usr/local/bin/redis_exporter -web.listen-address ":9121" -redis.addr "redis://{{redis_ip}}:6379" -redis.password "foobared"

[Install]
WantedBy=multi-user.target